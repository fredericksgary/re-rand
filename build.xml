<project name="re-rand" default="jar">
  <description>
    Pack all re-rand sources into a JAR. Compile those that can be compiled
    standalone if the clojure.jar property points us to clojure.jar .
  </description>

  <available property="hasclojure" file="${clojure.jar}"/>
  
  <property name="build.dir" location="classes"/>
  <property name="source.dir" location="src"/>
  <property name="re-rand.jar" location="re-rand.jar"/>

  <target name="clean" description="Remove generated files">
    <delete file="${re-rand.jar}"/>
    <delete dir="${build.dir}"/>
  </target>

  <target name="init" depends="clean">
    <tstamp/>
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="compile"
          depends="init"
          description="Compile sources"
          if="hasclojure">
    <java classname="clojure.lang.Compile">
      <classpath>
        <path location="${build.dir}"/>
        <path location="${source.dir}"/>
        <path location="${clojure.jar}"/>
      </classpath>
      <sysproperty key="clojure.compile.path" value="${build.dir}"/>
      <arg value="re-rand"/>
      <arg value="re-rand.parser.rules"/>
      <arg value="re-rand.parser.tools"/>
    </java>
  </target>

  <target name="jar" description="Create jar file" depends="compile">
    <jar jarfile="${re-rand.jar}">
      <path location="LICENSE"/>
      <fileset dir="${source.dir}" includes="**/*.clj"/>
      <fileset dir="${build.dir}" includes="**/*.class"/>
    </jar>
  </target>
</project>
